[Unit]
Description=Monthly backup of %i
Requires=network-check.service
After=network-check.service

[Timer]
OnBootSec=15min
RandomizedDelaySec=1h
OnCalendar=monthly
Persistent=true
Unit=restic-backup@%i.service

[Install]
WantedBy=timers.target
