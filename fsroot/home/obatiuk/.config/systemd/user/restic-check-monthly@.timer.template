[Unit]
Description=Monthly check for %i
Requires=network-online.target
After=network-online.target

[Timer]
OnBootSec=15min
RandomizedDelaySec=1h
OnCalendar=monthly
Persistent=true
Unit=restic-check@%i.service

[Install]
WantedBy=timers.target
